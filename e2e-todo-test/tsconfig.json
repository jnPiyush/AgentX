{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["../vscode-extension/node_modules/@types"],
    "baseUrl": ".."
  },
  "include": ["e2e-todo-test/*.ts", "vscode-extension/src/utils/**/*.ts"],
  "exclude": ["node_modules", "out"]
}
